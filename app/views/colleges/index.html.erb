<p id="notice"><%= notice %></p>

<h1>Listing Colleges</h1>

<table>
  <thead>
    <tr>
      <th>Faculty</th>
      <th>Students</th>
      <th>Sex</th>
      <th>Dob</th>
      <th>Hour</th>
      <th>More</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.faculty %></td>
        <td><%= college.students %></td>
        <td><%= college.sex %></td>
        <td><%= college.dob %></td>
        <td><%= college.hour %></td>
        <td><%= college.more %></td>
        <td><%= link_to 'Show', college %></td>
        <td><%= link_to 'Edit', edit_college_path(college) %></td>
        <td><%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

